<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Challenge8.FoodFragment">

    <TextView
        android:id="@+id/text_view_food_fragment"
        android:layout_width="390dp"
        android:layout_height="83dp"
        android:layout_marginStart="@dimen/space_8_dp"
        android:layout_marginTop="@dimen/space_8_dp"
        android:layout_marginEnd="@dimen/space_8_dp"
        android:background="@color/colorPrimaryDark"
        android:gravity="center_horizontal"
        android:text="@string/bbq"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textColor="@color/white_color"/>

    <ImageView
        android:id="@+id/image_food_fragment"
        android:layout_width="wrap_content"
        android:layout_height="567dp"
        android:layout_marginStart="@dimen/space_8_dp"
        android:layout_marginEnd="@dimen/space_8_dp"
        android:background="@color/colorPrimaryDark"
        android:contentDescription="@string/food_content_description"
        android:scaleType="centerInside"
        android:src="@drawable/food" />


</FrameLayout>