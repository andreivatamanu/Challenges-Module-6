<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Challenge8.MovieFragment">

    <TextView
        android:id="@+id/text_view_movie_fragment"
        android:layout_width="383dp"
        android:layout_height="130dp"
        android:layout_marginStart="@dimen/space_8_dp"
        android:layout_marginTop="@dimen/space_8_dp"
        android:layout_marginEnd="@dimen/space_8_dp"
        android:background="@color/colorPrimaryDark"
        android:gravity="center_horizontal"
        android:text="@string/snowden"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textColor="@color/white_color"

    <ImageView
        android:id="@+id/image_movie_fragment"
        android:layout_width="match_parent"
        android:layout_height="567dp"
        android:layout_marginStart="@dimen/space_0_dp"
        android:layout_marginEnd="@dimen/space_8_dp"
        android:layout_marginBottom="@dimen/space_8_dp"
        android:background="@color/colorPrimaryDark"
        android:contentDescription="@string/snowden_content_description"
        android:scaleType="centerInside"
        android:src="@drawable/movie" />


</FrameLayout>